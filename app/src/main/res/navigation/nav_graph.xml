        android:label="Slideshow"
        tools:layout="@layout/fragment_slideshow">
        <action
            android:id="@+id/action_slideshowFragment_to_editUserFragment"
            app:destination="@id/editUserFragment" />
    </fragment>

    <fragment
        android:id="@+id/editUserFragment"
        android:name="com.example.prueba.ui.edit.EditUserFragment"
        android:label="Edit User"
        tools:layout="@layout/fragment_edit_user" />
</navigation>
